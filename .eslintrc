{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "allowImportExportEverywhere": true
    },
    "plugins": [        
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "getter-return": "error",
        "for-direction": "error"
    }
}
